{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "-/*": ["src/defines/localisation/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
